<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/network_proxy_small_space">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:textColor="@android:color/black"
        android:textSize="@dimen/network_proxy_small_size"
        tools:text="https://localhost:3000/api/v3/services" />

    <TextView
        android:id="@+id/tvDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="@dimen/network_proxy_small_space"
        android:layout_marginEnd="@dimen/network_proxy_small_space"
        android:layout_marginRight="@dimen/network_proxy_small_space"
        android:layout_toStartOf="@+id/tvProceed"
        android:layout_toLeftOf="@+id/tvProceed"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/network_proxy_xxsmall_space"
        android:text="@string/network_proxy_detail"
        android:textColor="@android:color/black"
        android:textSize="@dimen/network_proxy_small_size" />

    <TextView
        android:id="@+id/tvProceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/network_proxy_small_space"
        android:background="?android:attr/selectableItemBackground"
        android:padding="@dimen/network_proxy_xxsmall_space"
        android:text="@string/network_proxy_proceed"
        android:textColor="@android:color/black"
        android:textSize="@dimen/network_proxy_small_size" />
</RelativeLayout>
